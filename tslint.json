{
  "extends": [
    "tslint-config-standard",
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "tools/**/*.ts",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "dist/**/*.js",
      "(^((?!.*(src/)).).*(spec|test)\\.ts.*$)",
      "**.*.config.js"
    ]
  },
  "rules": {
    "ordered-imports": false,
    "no-console": [true, "log", "error"]
  }
}
